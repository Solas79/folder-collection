<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <AssemblyName>Jellyfin.Plugin.CollectionsByFolder</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.CollectionsByFolder</RootNamespace>

    <!-- ðŸ‘‡ Plugin-/Assembly-Version -->
    <Version>0.1.3</Version>
    <FileVersion>0.1.3.0</FileVersion>
    <AssemblyVersion>0.1.3.0</AssemblyVersion>
    <!-- (Optional) falls du eigene Assembly-Infos per Attributes setzt -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.*" />
    <PackageReference Include="Jellyfin.Controller" Version="10.10.*" />
    <PackageReference Include="Jellyfin.Model" Version="10.10.*" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.*" />
  </ItemGroup>

  <!-- Eingebettete Plugin-Webseiten -->
  <ItemGroup>
    <EmbeddedResource Include="configPage.html">
      <LogicalName>Jellyfin.Plugin.CollectionsByFolder.configPage.html</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="configPage.js">
      <LogicalName>Jellyfin.Plugin.CollectionsByFolder.configPage.js</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

</Project>
