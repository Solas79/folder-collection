<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>Jellyfin.Plugin.CollectionsByFolder</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.CollectionsByFolder</RootNamespace>
    <Nullable>enable</Nullable>

     <!-- Versionen sauber setzen -->
    <Version>0.2.0</Version>
    <AssemblyVersion>0.2.0.0</AssemblyVersion>
    <FileVersion>0.2.-.0</FileVersion>
    <InformationalVersion>0.2.0</InformationalVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.0" />
    <PackageReference Include="Jellyfin.Model" Version="10.10.0" />
    <PackageReference Include="Jellyfin.Controller" Version="10.10.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
  </ItemGroup>

  <ItemGroup>
  <EmbeddedResource Include="configPage.html">
    <LogicalName>Jellyfin.Plugin.CollectionsByFolder.configPage.html</LogicalName>
  </EmbeddedResource>
  <EmbeddedResource Include="configPage.js">
    <LogicalName>Jellyfin.Plugin.CollectionsByFolder.configPage.js</LogicalName>
  </EmbeddedResource>
</ItemGroup>

