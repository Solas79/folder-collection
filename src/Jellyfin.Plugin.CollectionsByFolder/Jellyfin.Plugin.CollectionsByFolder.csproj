<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- nur die DLL bauen; nicht publishen -->
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <!-- optional: version sichtbar im Ordnernamen -->
    <Version>0.1.3.0</Version>
    <AssemblyVersion>0.1.3.0</AssemblyVersion>
    <FileVersion>0.1.3.0</FileVersion>
  </PropertyGroup>

  <!-- Jellyfin-Pakete nur zum Kompilieren; niemals ins ZIP mitnehmen -->
  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.0">
      <ExcludeAssets>runtime;native;contentfiles;analyzers;buildtransitive</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Model" Version="10.10.0">
      <ExcludeAssets>runtime;native;contentfiles;analyzers;buildtransitive</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Controller" Version="10.10.0">
      <ExcludeAssets>runtime;native;contentfiles;analyzers;buildtransitive</ExcludeAssets>
    </PackageReference>

    <!-- FÃ¼r Controller-Attribute, nur Compile-Time -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5">
      <ExcludeAssets>runtime;native;contentfiles;analyzers;buildtransitive</ExcludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Eingebettete Web-Ressourcen (Linux-freundliche /-Slashes!) -->
  <ItemGroup>
    <EmbeddedResource Include="Configuration/index.html" />
    <EmbeddedResource Include="Configuration/index.js" />
  </ItemGroup>

</Project>
