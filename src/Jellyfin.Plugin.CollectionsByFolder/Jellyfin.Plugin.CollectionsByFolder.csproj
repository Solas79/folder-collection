<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Fix: Namen deterministisch machen -->
    <AssemblyName>Jellyfin.Plugin.CollectionsByFolder</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.CollectionsByFolder</RootNamespace>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.0" />
    <PackageReference Include="Jellyfin.Model" Version="10.10.0" />
    <PackageReference Include="Jellyfin.Controller" Version="10.10.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
  </ItemGroup>

  <!-- WICHTIG: so werden HTML/JS in die DLL eingebettet -->
  <ItemGroup>
    <EmbeddedResource Include="Configuration/index.html" />
    <EmbeddedResource Include="Configuration/index.js" />
  </ItemGroup>

</Project>
