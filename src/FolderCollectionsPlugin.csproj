<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>FolderCollections</AssemblyName>
    <RootNamespace>FolderCollections</RootNamespace>
    <LangVersion>latest</LangVersion>
    <!-- optional -->
    <Version>1.0.0</Version>
  </PropertyGroup>

  <!-- Nur EIN ItemGroup-Block fÃ¼r NuGet-Pakete, alle PackageReference SELF-CLOSING -->
  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.10.*" PrivateAssets="all" />
    <PackageReference Include="Jellyfin.Model"      Version="10.10.*" PrivateAssets="all" />
    <PackageReference Include="Jellyfin.Date"      Version="10.10.*" PrivateAssets="all" />
  </ItemGroup>

  <!-- Die HTML-Seite als EmbeddedResource einbinden -->
  <ItemGroup>
    <None Remove="Web/Configuration/config.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Web/Configuration/config.html">
      <LogicalName>FolderCollections.Web.Configuration.config.html</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

</Project>
