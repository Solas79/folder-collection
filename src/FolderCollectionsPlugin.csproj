<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <AssemblyName>Jellyfin.Plugin.FolderCollections.GUI</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.FolderCollections.GUI</RootNamespace>
    <Version>0.3.4</Version>
  </PropertyGroup>

  <ItemGroup>
    <!-- Bringen die MediaBrowser.*-Namespaces -->
    <PackageReference Include="Jellyfin.Common" Version="10.9.0" />
    <PackageReference Include="Jellyfin.Controller" Version="10.9.0" />
    <PackageReference Include="Jellyfin.Model" Version="10.9.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
  </ItemGroup>

  <!-- UI als Embedded Resources (fÃ¼r EmbeddedResourcePath) -->
  <ItemGroup>
    <EmbeddedResource Include="Web/Configuration/config.html">
      <LogicalName>Jellyfin.Plugin.FolderCollections.GUI.Web.Configuration.config.html</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Web/Configuration/config.js">
      <LogicalName>Jellyfin.Plugin.FolderCollections.GUI.Web.Configuration.config.js</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
</Project>
