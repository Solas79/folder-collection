<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <AssemblyName>FolderCollections</AssemblyName>
    <RootNamespace>FolderCollections</RootNamespace>

    <!-- Passe Version/Autor nach Bedarf an -->
    <Version>0.4.2</Version>
    <Authors>Solas79</Authors>
    <Description>Jellyfin plugin that builds collections based on folder structure.</Description>

    <!-- Hilft, alle Abhängigkeiten mitzuliefern, falls benötigt -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <!-- Referenzen: Versionen zur Jellyfin-Server-Version passend halten -->
  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.7" />
    <PackageReference Include="Jellyfin.Controller" Version="10.10.7" />
    <PackageReference Include="Jellyfin.Model" Version="10.10.7" />
  </ItemGroup>

  <!-- Deine Web-UI als Embedded Resources, damit die Config-Seite NICHT „schwebt“ -->
  <ItemGroup>
    <None Remove="Web\Configuration\config.html" />
    <None Remove="Web\Configuration\config.js" />
    <EmbeddedResource Include="Web\Configuration\config.html" />
    <EmbeddedResource Include="Web\Configuration\config.js" />

    <!-- Falls du Icons/Weitere Dateien einbettest -->
    <!-- <EmbeddedResource Include="Resources\**\*" /> -->
  </ItemGroup>

  <!-- (Optional) etwas strengeres Build-Setup -->
  <PropertyGroup>
    <WarningsAsErrors>nullable</WarningsAsErrors>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>
</Project>
