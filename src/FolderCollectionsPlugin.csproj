<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <AssemblyName>FolderCollections</AssemblyName>
    <RootNamespace>FolderCollections</RootNamespace>

    <Version>0.4.4</Version>
    <Authors>Solas79</Authors>
    <Description>Jellyfin plugin that builds collections based on folder structure.</Description>

    <!-- wichtig: keine Server-Core-DLLs automatisch mitkopieren -->
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <SelfContained>false</SelfContained>
    <PublishSingleFile>false</PublishSingleFile>
  </PropertyGroup>

  <!-- Referenzen zur Jellyfin 10.10.7 API; Runtime ausschlieÃŸen -->
  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.7">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Controller" Version="10.10.7">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Jellyfin.Model" Version="10.10.7">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Web-UI einbetten -->
  <ItemGroup>
    <None Remove="Web/Configuration/config.html" />
    <None Remove="Web/Configuration/config.js" />
    <EmbeddedResource Include="Web/Configuration/config.html" />
    <EmbeddedResource Include="Web/Configuration/config.js" />
  </ItemGroup>

  <!-- optional: etwas strenger -->
  <PropertyGroup>
    <WarningsAsErrors>nullable</WarningsAsErrors>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>
</Project>
