<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <AssemblyName>FolderCollections</AssemblyName>
    <RootNamespace>FolderCollections</RootNamespace>
    <Description>Jellyfin plugin: Folder Collections</Description>
    <Authors>Solas79</Authors>
    <Version>1.0.0</Version>

    <JellyfinVersion>10.10.7</JellyfinVersion>
  </PropertyGroup>

  <!-- ASP.NET Core APIs via FrameworkReference (statt App.Ref-Paket) -->
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <!-- Jellyfin/MediaBrowser-APIs passend zu 10.10.7 -->
  <ItemGroup>
    <PackageReference Include="Jellyfin.Common"     Version="$(JellyfinVersion)" />
    <PackageReference Include="Jellyfin.Model"      Version="$(JellyfinVersion)" />
    <PackageReference Include="Jellyfin.Controller" Version="$(JellyfinVersion)" />
    <!-- optional, nur falls gebraucht:
    <PackageReference Include="Jellyfin.Server.Implementations" Version="$(JellyfinVersion)" />
    -->
  </ItemGroup>

  <!-- Standalone-UI als Embedded Resources -->
  <ItemGroup>
    <EmbeddedResource Include="Web/ui/config.html"
                      LogicalName="FolderCollections.Web.ui.config.html" />
    <EmbeddedResource Include="Web/ui/fc-config.js"
                      LogicalName="FolderCollections.Web.ui.fc-config.js" />
    <EmbeddedResource Include="Web/redirect/launch.html"
                      LogicalName="FolderCollections.Web.redirect.launch.html" />
  </ItemGroup>

</Project>
